@{
    
}
@if (ViewBag.Success != null)
{
    <div class="alert alert-success">
        @ViewBag.Success
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
<div class="main-content">
    <form method="post" asp-action="Validate">
        <textarea class="textarea" asp-for="JsonInput" name="JsonInput" placeholder="Enter your JSON..."></textarea>
        <textarea class="textarea2" asp-for="JsonOutput" placeholder="See the beautified JSON...">@Model.JsonOutput</textarea>

        <div class="button-container">
            <button type="submit">Validate</button>
        </div>
    </form>

</div>
