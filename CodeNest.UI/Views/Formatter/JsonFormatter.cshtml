<div class="container-fluid text-center">
    <div class="card">
        <div class="card-header">
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">Formatter</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Validator</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Minify</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" aria-disabled="true">Disabled</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <form method="post" asp-action="FormatJson">
                <div class="row">
                    <!-- Input JSON Data Column -->
                    <div class="col-5">
                        <h5>Input JSON</h5>
                        <textarea id="inputJson" rows="23" class="form-control" placeholder="Enter JSON data"></textarea>
                        <div class="mt-2 d-flex justify-content-between">
                            <button id="copyInputJsonBtn" type="button" class="btn btn-outline-secondary">Copy Input JSON</button>
                            <button id="saveInputJsonBtn" type="button" class="btn btn-outline-primary">Save Input JSON</button>
                        </div>
                    </div>

                    <!-- Actions Column -->
                    <div class="col-2">
                        <h5>Actions</h5>
                        <button id="transformBtn" type="button" class="btn btn-primary mb-2">Format</button>
                        <button id="validateBtn" type="button" class="btn btn-success mb-2">Validate</button>
                        <button id="minifyBtn" type="button" class="btn btn-info mb-2">Minify</button>
                        <button id="clearBtn" type="button" class="btn btn-warning">Clear</button>
                    </div>

                    <!-- Formatted JSON Data Column -->
                    <div class="col-5">
                        <h5>Formatted JSON</h5>
                        <textarea id="formattedJson" rows="23" class="form-control" readonly placeholder="Formatted JSON will appear here"></textarea>
                        <div class="mt-2 d-flex justify-content-between">
                            <button id="copyFormattedJsonBtn" type="button" class="btn btn-outline-secondary">Copy Formatted JSON</button>
                            <button id="saveFormattedJsonBtn" type="button" class="btn btn-outline-primary">Save Formatted JSON</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
